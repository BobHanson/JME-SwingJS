<project name="Build Tracker core using SwingJS branch " default="toJs" basedir=".">
 
   <property name="site.path" value="site/swingjs" />
   <property name="j2s.dir" value="${site.path}/j2s" />

   <target name="toJs" id="toJs">
  			
   	<!-- make core files -->

   	<echo>creating and compressing core files - warnings are OK; "does not exist" is trouble</echo>
   	<echo>reading core class list from file coreclasses</echo>   	

   	<loadresource property="coreclasses">
       <file file="j2sclasslist.txt"/>
    </loadresource>
 
    <antcall target="call-core">
        <param name="call-core.name" value="_jme" />
        <param name="call-core.list" value="
         	${coreclasses}
        	" />
    </antcall>
   	
   	
   	<loadresource property="coreclasses-base">
       <file file="corejs/jme-base.txt"/>
    </loadresource>
 
    <antcall target="call-core">
        <param name="call-core.name" value="_jme-base" />
        <param name="call-core.list" value="
         	${coreclasses-base}
        	" />
    </antcall>
   	
   	<loadresource property="coreclasses-dnd">
       <file file="corejs/jme-dnd.txt"/>
    </loadresource>
 
    <antcall target="call-core">
        <param name="call-core.name" value="_jme-dnd" />
        <param name="call-core.list" value="
         	${coreclasses-dnd}
        	" />
    </antcall>
   	
   	<loadresource property="coreclasses-svg">
       <file file="corejs/jme-svg.txt"/>
    </loadresource>
 
    <antcall target="call-core">
        <param name="call-core.name" value="_jme-svg" />
        <param name="call-core.list" value="
         	${coreclasses-svg}
        	" />
    </antcall>

   	<copy file="corejs/package.js" todir="${j2s.dir}/core" />

  </target>


	  <target name="call-core" id="call-core">
	   	<echo>......Creating core${call-core.name}.js</echo>
	   	<concat destfile="${site.path}/js/core/tmp.js">
	   		<filelist dir="${j2s.dir}" files="${call-core.list}" />
	   	</concat> 

	  	<replace dir="${site.path}/js/core" includes="tmp.js" token="Clazz." value="Clazz_"/>
	  	<replace dir="${site.path}/js/core" includes="tmp.js" token="Clazz__" value="Clazz._"/>
	   	<echo>......Generating ${j2s.dir}/core/core${call-core.name}.js</echo> 	
	   	<concat destfile="${j2s.dir}/core/core${call-core.name}.js"><filelist dir="${site.path}/js" files="
	   		core/coretop2.js
	   		core/tmp.js
	   		core/corebottom2.js
	   		" />
	   	</concat>
	   	<echo>......Generating ${j2s.dir}/core/core${call-core.name}.z.js</echo> 	
	   	<java jar="tools/closure_compiler.jar" fork="true" dir="${j2s.dir}/core" failonerror="false">
	   		<arg line="--js core${call-core.name}.js --js_output_file core${call-core.name}.z.js" />
	    </java>
	 	<delete quiet="true" file="${site.path}/js/core/tmp.js" />
	  </target>
	
</project>
